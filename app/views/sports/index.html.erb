<p id="notice"><%= notice %></p>

<h1>Sports</h1>

<table align="center">
  <thead>
    <tr>
      <th>Plan</th>
      <th>Activity</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sports.each do |sport| %>
      <tr>
        <td><%= sport.plan.name %></td>
        <td><%= sport.activity.name %></td>
        <td><%= sport.time %></td>
        <td><%= link_to 'Show', sport %></td>
        <td><%= link_to 'Edit', edit_sport_path(sport) %></td>
        <td><%= link_to 'Destroy', sport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

