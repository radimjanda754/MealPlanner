<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Proteins</th>
      <th>Carbohydrates</th>
      <th>Fats</th>
      <th>Caloriess</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.prots %></td>
        <td><%= food.carbs %></td>
        <td><%= food.fats %></td>
        <td><%= food.cals %></td>
        <td><%= link_to 'Show', food %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

